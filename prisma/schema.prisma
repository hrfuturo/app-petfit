// Prisma schema for app-petfit
// Use SQLite for local development

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  role      String   @default("USER")
  createdAt DateTime @default(now())
}


